<h2>Hosting Plans</h2>

<table class="table table-striped">

  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Details</th>
  </tr>

<% @plans.each do |plan| %>
  <tr>
    <td><%= link_to plan, plan_path(plan) %></td>
    <td><%= plan.price %></td>
    <td><%= plan.details %></td>
  </tr>
<% end %>

</table>
